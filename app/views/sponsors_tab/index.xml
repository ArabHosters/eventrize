<Alloy>
  <Collection id="sponsorsSliderCollection" instance="true" src="sponsors"/>
  <Collection id="sponsorsGridCollection" instance="true" src="sponsors"/>
  <Tab>
    <Window>
      <ScrollableView dataCollection="$.sponsorsSliderCollection">
        <ImageView image="{featured_image}" link="{link}" onClick="openUrl"/>
      </ScrollableView>
      <View dataCollection="$.sponsorsGridCollection" id="gridView">
        <ImageView class="gridImageView" image="{thumbnail}" link="{link}" onClick="openUrl"/>
      </View>
    </Window>
  </Tab>
</Alloy>
