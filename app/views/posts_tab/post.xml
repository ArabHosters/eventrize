<Alloy>
  <Window onClose="$.destroy">
    <Menu platform="android">
      <MenuItem class="shareMenuItem" onClick="shareButtonClicked"/>
    </Menu>
    <TableView id="mainTable" onScroll="updateScrolls">
      <TableViewRow layout="vertical">
        <Module id="featuredImageView" image="{featured_image}" method="createImageView" module="dk.napp.imageview" platform="ios"/>
        <ImageView class="shareButton" onClick="shareButtonClicked"/>
      </TableViewRow>
      <TableViewRow>
        <View class="leftBorder"/>
        <Label class="datePrettyLabel" text="{datePretty}"/>
        <Label class="titleLabel" text="Sharp unveils"/>
      </TableViewRow>
      <TableViewRow>
        <Label class="contentLabel" text="{content}"/>
      </TableViewRow>
    </TableView>
  </Window>
</Alloy>
