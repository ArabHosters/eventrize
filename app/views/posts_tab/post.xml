<Alloy>
  <Window onClose="$.destroy" title="{title}">
    <RightNavButton platform="ios">
      <Button id="shareButton" onClick="shareButtonClicked"/>
    </RightNavButton>
    <Menu platform="android">
      <MenuItem id="shareMenuItem" onClick="shareButtonClicked"/>
    </Menu>
    <ScrollView>
      <ImageView id="featuredImageView" image="{featured_image}"/>
      <Label id="contentLabel" text="{content}"/>
    </ScrollView>
  </Window>
</Alloy>
