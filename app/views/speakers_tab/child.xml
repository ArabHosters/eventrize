<Alloy>
  <Window onClose="$.destroy" title="{name}">
    <RightNavButton platform="ios">
      <Button id="shareButton" onClick="shareButtonClicked"/>
    </RightNavButton>
    <Menu platform="android">
      <MenuItem id="shareMenuItem" onClick="shareButtonClicked"/>
    </Menu>
    <Module bindId="postImage" id="featuredImageView" image="{featured_image}" method="createImageView" module="dk.napp.imageview" platform="ios"/>
    <ScrollView id="featuredImageView" platform="android">
      <ImageView image="{featured_image}" width="100%"/>
    </ScrollView>
    <ScrollView id="containnerScrollView">
      <View id="containnerView">
        <Label id="nameLabel" text="{name}"/>
        <Label id="titleLabel" text="{title}"/>
        <View class="horizontalView" left="0">
          <ImageView image="/images/info_ic.png"/>
          <Label id="aboutLabel"/>
        </View>
        <Label id="bioLabel" text="{bio}"/>
      </View>
      <View id="iconsView" onClick="openUrl" />
    </ScrollView>
  </Window>
</Alloy>
