<Alloy>
  <Collection id="agendaCollection" instance="true" src="agenda"/>
  <Tab>
    <Window>
      <ScrollView dataCollection="$.agendaCollection" dataTransform="agendaTransfomer">
        <View class="lineView" visible="{showLineView}"/>
        <View class="horizontalView">
          <Label class="prettyStartDateLabel" text="{prettyStartDate}"/>
          <Widget class="iconLabel" icon="{icon}" src="ti.ux.iconfont"/>
          <View class="verticalView">
            <Label class="titleLabel" text="{title}"/>
            <View class="horizontalView">
              <ImageView class="speakerImageView"/>
              <ImageView class="speakerImageView"/>
              <ImageView class="speakerImageView"/>
            </View>
          </View>
        </View>
      </ScrollView>
    </Window>
  </Tab>
</Alloy>
