<Alloy>
  <Collection id="agendaCollection" instance="true" src="agenda"/>
  <Collection id="agendaDaysCollection" instance="true" src="agenda"/>
  <Tab>
    <Window>
      <ScrollView id="containnerScrollView">
        <View class="lineView"/>
        <View dataCollection="$.agendaCollection" layout="vertical">
          <View height="Ti.UI.SIZE" myId="{id}" onClick="viewClicked">
            <Label class="startdatePrettyLabel" text="{startdatePretty}"/>
            <Widget class="iconLabel" icon="{icon}" src="ti.ux.iconfont"/>
            <View class="verticalView fitView">
              <Label class="titleLabel" text="{title}"/>
            </View>
          </View>
        </View>
      </ScrollView>

      <View dataCollection="$.agendaDaysCollection" dataTransform="dataTransformer" id="segmentBar" onClick="segmentBarClicked">
        <Button backgroundColor="{backgroundColor}" class="segmentBarButton" dayNumber="{dayNumber}" left="{left}" rel="yahoo" right="{right}" title="{dayNumberFormated}" width="{width}"/>
      </View>
    </Window>
  </Tab>
</Alloy>
